{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "esnext",
        "skipLibCheck": true,
        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "noUnusedLocals": false,
        "jsx": "react-jsx",
        /* Linting */
        "strict": false,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true,
        "checkJs": false,
        "noImplicitAny": false,
        "strictNullChecks": false,
        "typeRoots": [
            "node_modules/@types",
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "esModuleInterop": true,
        "declaration": true,
        "declarationMap": true,
    },
    "include": [
        "src",
    ],
    "exclude": [
        "node_modules"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}